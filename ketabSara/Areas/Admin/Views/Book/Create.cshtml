@model ketabSara.Areas.Admin.Models.Book.CreateBookViewModel

<div class="container-md">
    <div class="col-md">
        <div class="card">
            <h5 class="card-header heading-color">ایجاد کتاب جدید</h5>
            <div class="card-body">
                <form method="post" class="needs-validation" asp-area="Admin" asp-controller="BookDetails" asp-action="CreateBook" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Title"></label>
                        <input type="text" class="form-control" placeholder="عنوان کتاب" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger mt-4"></span>
                        <br />
                        <div class="mb-3">
                            <label asp-for="AuthorId" class="form-label">انتخاب پیش فرض</label>
                            <select asp-for="AuthorId" 
                                    asp-items="Model.AuthorsSelectList" 
                                    class="form-control">
                                <option value="">-- انتخاب نویسنده --</option>
                            </select>
                        </div>
                        <span asp-validation-for="AuthorId" class="text-danger mt-4"></span>
                        <br />
                        <label class="form-label" asp-for="Price"></label>
                        <input type="text" class="form-control" placeholder="قیمت کتاب" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger mt-4"></span>
                        <br />
                        <label class="form-label" asp-for="Img"></label>
                        <input type="file" class="form-control" asp-for="Img">
                        <span asp-validation-for="Img" class="text-danger mt-4"></span>
                        <br />
                        <div>
                            <label class="form-label" asp-for="Description"></label>
                            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger mt-4"></span>

                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">ثبت</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>