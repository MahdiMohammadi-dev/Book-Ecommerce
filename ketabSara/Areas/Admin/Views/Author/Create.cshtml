@model ketabSara.Areas.Admin.Models.Author.CreateAuthorViewModel

<div class="container-md">
    <div class="col-md">
        <div class="card">
            <h5 class="card-header heading-color">ایجاد نویسنده جدید</h5>
            <div class="card-body">
                <form method="post" class="needs-validation" asp-area="Admin" asp-controller="Author" asp-action="CreateAuthor">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Name"></label>
                        <input type="text" class="form-control" placeholder="نام" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger mt-4"></span>
                        <br/>
                        <label class="form-label" asp-for="Family"></label>
                        <input type="text" class="form-control" placeholder="نام خانوادگی" asp-for="Family">
                        <span asp-validation-for="Family" class="text-danger mt-4"></span>
                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">ثبت</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>