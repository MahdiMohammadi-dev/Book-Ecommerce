@model KetabSara.CoreLayer.DTO.Books.PaginationBookDto

<div style="display: flex; justify-content: center; margin-top: 15px;">
    <h1> تمام کتاب ها </h1>
</div>

<div >
    <form class="search-container" asp-controller="BookDetails" asp-action="BookList" asp-route-page="@Model.Page" style="width:100%">
        <input type="text" name="search" placeholder="جستجو...">
        <button id="search-btn" type="submit">  <i class="fa fa-search"></i> </button>
    </form>
</div>

<div class="BooksContainer">

    @{
        foreach (var paginationBookDto in Model.BookDtos)
        {
            <div class="bookItem">
                <div class="bookDetails">
                    <img src="/uploads/@paginationBookDto.ImageName" class="imgBook">
                    <div>
                        <h3>
                            @paginationBookDto.Title
                        </h3>
                        <p>
                            @paginationBookDto.AuthorName
                        </p>
                        <p> @paginationBookDto.Price تومان </p>

                    </div>
                </div>

                <a asp-controller="BookDetails" asp-action="Index" asp-route-id="@paginationBookDto.Id" style="text-decoration : none" class="cartBtn">
                    مشاهده
                </a>
            </div>
        }
    }


</div>


<div style="display: flex; justify-content: center; margin-top: 15px; margin-bottom: 30px;">
    <div class="pagination">


        @{
            for (int i = 1; i <= @Model.TotalPages; i++)
            {
                if (i == Model.Page)
                {
                    <a class="active" asp-action="BookList" asp-route-page="@i">@i</a>
                }
                else
                {
                    <a asp-action="BookList" asp-route-page="@i">@i</a>
                }
            }
        }
    </div>
</div>