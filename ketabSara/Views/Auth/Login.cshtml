@model LoginViewModel

<div class="LoginContainer">
    <form asp-controller="Auth" asp-action="Login" class="register-form">
        <h2>ورود</h2>
        <div class="input-group">
            <label asp-for="Email">ایمیل</label>
            <input type="email" asp-for="Email">
            <span style="color:red;" asp-validation-for="Email"></span>
        </div>
        <div class="input-group">
            <label asp-for="Password">رمز عبور</label>
            <input type="password" asp-for="Password">
            <span style="color:red;" asp-validation-for="Password"></span>

        </div>
        <div style="display:flex;">
            <input type="checkbox" class="input-group" asp-for="RememeberMe"/>
            <label asp-for="RememeberMe"></label>

        </div>
        <button type="submit" style="font-family: Bykan; font-size: 18px;">ورود</button>
        <p>حساب کاربی ندارید؟ ثبت نام کنید? <a asp-controller="Auth" asp-action="RegisterIndex">ثبت نام</a></p>
    </form>
</div>